#ifdef GL_ES
precision mediump float;
#endif

uniform vec2 u_resolution;

vec4 tiling (vec2 st, float N) {
    return vec4(fract(st * N), floor(st * N) / N); 
}

void main() {
	vec2 st = gl_FragCoord.xy/u_resolution;
    
    vec4 tile = tiling(st, 10.);

    gl_FragColor = vec4(tile.zw, 1.0, 1.);
}